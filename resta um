void menu(){
    int j, coluna;
    char i, direcao;

     system("COLOR 04");
     char matriz[8] [8] = {{0, 65, 66, 67, 68, 69, 70, 71},
                                      {49, 0, 0, 220, 220, 220, 0, 0},
