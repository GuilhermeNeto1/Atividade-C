        printf("\n\n\n");
        for (int m = 0; m < 8; ++m){
                printf("  ");
                for (int n = 0; n < 8; ++n) {
                        printf("  %c ", matriz [m] [n]);
                        printf("\t");
                }
                printf("\n\n");
        }
        printf("\n\n");

        printf("Informe a coluna: ");
        scanf("\n%c", &i);

        switch (i){
            case 'a':
                coluna = 1;
            break;

            case 'b':
                coluna = 2;
            break;

            case 'c':
                coluna = 3;
            break;

            case 'd':
                coluna = 4;
            break;

            case 'e':
                coluna = 5;
            break;

            case 'f':
                coluna = 6;
            break;

            case 'g':
                coluna = 7;
            break;

            default:
                printf(" \ncordenada invalida\n");
            break;
        }

        printf("\nInforme a fileira: ");
        scanf("\n%d", &j);
        if(j == 0){printf(" \ncordenada invalida\n");}

        printf("%c", matriz[coluna][j]);
        
        //printf("\nDigite a direção: ")
        //scanf("\n%c ", direcao);
        
    }
int main() {

